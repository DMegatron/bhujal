  "repository": {
    "type": "git",
    "url": "https://github.com/DMegatron/bhujal.git"
  },
  "bugs": {
    "url": "https://github.com/DMegatron/bhujal/issues"
  },
  "homepage": "https://github.com/DMegatron/bhujal#readme"
}
