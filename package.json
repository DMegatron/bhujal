{
  "name": "bhujal-groundwater-management",
  "version": "1.0.0",
  "description": "Full-stack Node.js Groundwater Management System with MongoDB, Express, and EJS",
  "main": "simple-app.js",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node simple-app.js",
    "dev": "nodemon simple-app.js",
    "dev:full": "concurrently \"npm run dev\" \"npm run predict-service\"",
    "predict-service": "python predict_service.py",
    "install-deps": "npm install",
    "setup": "npm install && node -e \"console.log('âœ… Dependencies installed! Create .env file and run: npm run dev')\"",
    "check": "node -e \"console.log('Node.js:', process.version); console.log('NPM:', require('child_process').execSync('npm -v').toString().trim());\""
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "connect-flash": "^0.1.1",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "method-override": "^3.0.0",
    "mongoose": "^7.5.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "groundwater",
    "borewell",
    "water-management",
    "nodejs",
    "express",
    "mongodb",
    "environmental-monitoring",
    "mapping",
    "weather-api"
  ],
  "author": "Bhujal Team",
